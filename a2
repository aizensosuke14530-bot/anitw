.card-body h3{margin:0 0 8px;color:var(--accent-2)}
.card-body p{margin:0 0 12px;color:var(--muted)}
.actions{display:flex;gap:10px}
.btn{display:inline-block;padding:8px 12px;border-radius:8px;background:linear-gradient(90deg,var(--accent),var(--accent-2));color:#071029;text-decoration:none;font-weight:700}
