.grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:22px;margin-top:24px}
.card{background:linear-gradient(180deg, rgba(255,255,255,0.02), rgba(0,0,0,0.25));border-radius:14px;overflow:hidden;border:1px solid rgba(255,255,255,0.03)}
.card img{width:100%;height:320px;object-fit:cover;display:block}
